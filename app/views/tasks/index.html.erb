<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <strong><%= link_to task.title, task_path(task) %></strong>
      (<%= task.completed ? 'Completed' : 'Incomplete' %>)
      <p><%= task.details %></p>
      <%= link_to 'Edit', edit_task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Task', new_task_path %>
