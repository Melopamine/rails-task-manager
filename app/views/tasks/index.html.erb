<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <strong><%= link_to task.title, task_path(task) %></strong>
      (<%= task.completed ? 'Completed' : 'Incomplete' %>)
      <p><%= task.details %></p>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>

<%= link_to 'New Task', new_task_path %>
